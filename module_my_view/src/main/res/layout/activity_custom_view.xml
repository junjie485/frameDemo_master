<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ljj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".activity.CustomViewActivity">
    <include layout="@layout/title_bar_common"/>
    <com.kuaqu.reader.module_my_view.utils.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/flag_03"
            android:text="Welcome"
            android:textColor="#43BBE7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/flag_03"
            android:text="IT工程师"
            android:textColor="#43BBE7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/flag_03"
            android:text="我真是可以的"
            android:textColor="#43BBE7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/flag_03"
            android:text="你觉得呢"
            android:textColor="#43BBE7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/flag_03"
            android:text="不要只知道挣钱"
            android:textColor="#43BBE7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/flag_03"
            android:text="努力ing"
            android:textColor="#43BBE7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/flag_03"
            android:text="I thick i can"
            android:textColor="#43BBE7" />

    </com.kuaqu.reader.module_my_view.utils.FlowLayout>
    <com.kuaqu.reader.module_my_view.utils.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        ljj:image="@mipmap/ic_launcher"
        ljj:imageScaleType="center"
        ljj:titleText="hello andorid ! "
        ljj:titleTextColor="#ff0000"
        ljj:titleTextSize="30sp"/>
    <com.kuaqu.reader.module_my_view.utils.CustomImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        ljj:image="@mipmap/ic_launcher"
        ljj:imageScaleType="fillXY"
        ljj:titleText="hello andorid ! "
        ljj:titleTextColor="#ff0000"
        ljj:titleTextSize="30sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onPoints"/>
    <com.kuaqu.reader.module_my_view.utils.MyImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/myImg"
        android:background="@mipmap/anim5"/>

</LinearLayout>