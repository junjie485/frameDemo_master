<?xml version="1.0" encoding="utf-8"?>
<com.kuaqu.reader.module_specail_ui.utils.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_menu"
    android:background="@mipmap/anim1"
    tools:context=".activity.QQActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include layout="@layout/layout_menu" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/qq"
                android:scaleType="centerCrop"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换菜单"
                android:onClick="toggleMenu"/>
        </FrameLayout>

    </LinearLayout>

</com.kuaqu.reader.module_specail_ui.utils.SlidingMenu>